<% layout('./layouts/boilerplate') %> 
<div class="row mt-3">
    <div class="col-lg-6 offset-3">
        <% if (error && error.length) {%> 
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %> 
    </div>
</div>
<div calss="row">
    <div class="col-lg-6 offset-3">
        <button id="charades" type="submit" class="btn btn-lg btn-dark mt-3">Charades</button>
        <button id="whiteboard" type="submit" class="btn btn-lg btn-dark mt-3">Whiteboard</button>
    </div>
</div>
<div class="col-lg-4 offset-4">
    <form id="whiteboard-form" class="form-signin py-5 d-none" action="/whiteboard-create" method="POST" novalidate>
        <h1 class="h3 mb-3 font-weight-normal">Create whiteboard room</h1>
        <label for="room[username]" class="sr-only"></label>
        <input type="text" name="room[username]" class="form-control" id="username" placeholder="Screen name" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="room[name]" class="sr-only"></label>
        <input type="text" class="form-control" id="room" name="room[name]" placeholder="Room name" required> 
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="room[password]" class="sr-only"></label>
        <input type="password" class="form-control" id="password" name="room[password]" placeholder="Room password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <button type="submit" class="btn btn-lg btn-dark mt-3">Create</button>
        <p class="mt-2 mb-3 text-muted">&copy; 2021</p>
    </form>
</div>
<div class="col-lg-4 offset-4">
    <form id="charades-form" class="form-signin py-5 d-none" action="/charades-create" method="POST" novalidate>
        <h1 class="h3 mb-3 font-weight-normal">Create charades room</h1>
        <label for="room[username]" class="sr-only"></label>
        <input type="text" name="room[username]" class="form-control" id="username" placeholder="Screen name" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="room[name]" class="sr-only"></label>
        <input type="text" class="form-control" id="room" name="room[name]" placeholder="Room name" required> 
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="room[password]" class="sr-only"></label>
        <input type="password" class="form-control" id="password" name="room[password]" placeholder="Room password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <button type="submit" class="btn btn-lg btn-dark mt-3">Create</button>
        <p class="mt-2 mb-3 text-muted">&copy; 2021</p>
    </form>
</div>
<script src="/js/typeOfGame.js"></script>