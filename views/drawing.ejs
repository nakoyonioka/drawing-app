<% layout('./layouts/boilerplate') %> 
<div class="container-fluid container-canvas text-center">
    <div class="row d-flex flex-row ">
        <h3><span class="d-none" id="username"><%= username %></span>Welcome<span class="d-none" id="room"><%= room %></span></h3>
        <div class="col-lg-1 py-0 ms-1">
            <nav class="sidebar-sticky ">
                <div class="text-dark">
                    <div class="mt-0">
                        <h6 class="text-dark border-bottom border-2">Users</h3>
                        <ul id="users" class="nav flex-column py-2 mt-2">
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <canvas class="border border border-2 rounded canvas-drawing" id="canvas"> 

            </canvas>
        </div>
        <div class="col-lg-1">
            <div class="d-flex flex-row align-items-center">
                <p class="text-center me-1 p-1 mt-2">Color</p>
                <input type="color" class="form-control form-control-color mb-2" id="color-picker" value="#563d7c" title="Choose your color">
            </div>
            <div class="d-flex flex-row align-items-center">
                <p class="text-center me-1 p-1 mt-2">Width</p>
                <select id="select-line" class="form-select w-100">
                    <option selected value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">5</option>
                    <option value="3">10</option>
                    <option value="3">20</option>
                </select>  
            </div>
            <a class="btn btn-md btn-dark mt-5" id="download" download="drawing.png" href="" onclick="download_png(this);">Save</a>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/clientDrawing.js"></script>